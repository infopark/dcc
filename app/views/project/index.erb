<% @projects.sort_by {|p| p.name.downcase}.each do |project| -%>
  <div class="box">
    <% link_to({:action => "show", :id => project}, :class => 'link') do -%>
      <span title="URL: <%= project.url %>; Branch: <%= project.branch %>"><%= project.name %></span>
    <% end -%>
    <span class="<%= status_css_class(project_status(project)) %>"><%#"vimrepair%>
      <%= project_display_status(project) %>
    </span>
    <div class="buttons">
      <% form_for :project, :url => {:action => :delete, :id => project} do |f| -%>
        <%= submit_tag 'LÃ¶schen', :class => 'red' %>
      <% end -%>
      <% form_for :project, :url => {:action => :build, :id => project} do |f| -%>
        <%= submit_tag 'Bauen', :class => 'green' %>
      <% end -%>
    </div>
    <% if project.last_system_error -%>
      <pre><%= project.last_system_error %></pre>
    <% end -%>
  </div>
<% end -%>

<% content_for :extra_content do -%>
  <% form_for :project, :url => {:action => :create} do |f| -%>
    Name: <%= f.text_field :name %>
    URL: <%= f.text_field :url %>
    Branch: <%= f.text_field :branch %>
    <%= submit_tag 'Anlegen' %>
  <% end -%>
<% end -%>
